  <style>
    body {
    padding: 0;
    margin: 0;
    border: 0;
    color: black;
    background-color: chartreuse;
}
#head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: rgb(13, 88, 25);
    color: white;
    padding: 20px 30px;
    position: relative;
}

#menu {
  position: relative;
  background-color: white;
  padding: 10px;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  margin-right: auto;
  transition: opacity 0.3s ease;
}


/* Slide-out menu container */
#side-menu {
  position: fixed;
  top: 0;
  left: -250px; /* Hidden by default */
  width: 250px;
  height: 100%;
  background-color: #333;
  color: white;
  transition: left 0.3s ease;
  z-index: 1000;
  padding-top: 60px;
}

/* Active state: slide in */
#side-menu.active {
  left: 0;
}

/* Menu items */
#side-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

#side-menu ul li {
  padding: 15px 20px;
  border-bottom: 1px solid #444;
}

#side-menu ul li a {
  color: white;
  text-decoration: none;
  display: block;
}


#menu:hover {
  opacity: 0.8;
}


#t1{
    background-color: aqua;
    border-radius: 13px;
    color: black;
    padding: 10px 14px;
