<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hungama Click Frenzy</title>
  <style>
    body {
  background-color: #e5f2be;
  text-align: center;
  font-family: 'Comic Sans MS', cursive;
}

#title {
  background-color: #d9ebe9;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10px 20px;
  color: #031117;
  font-size: 1.5rem;
  font-weight: bold;
  text-align: center;
}

#game-area {
  position: relative;
  width: 100%;
  height: 400px;
  border: 2px dashed #ff4500;
  overflow: hidden;
  margin: 20px auto;
}

.emoji {
  position: absolute;
  font-size: 2rem;
  cursor: pointer;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0% { transform: translateY(0); }
  50% { transform: translateY(-30px); }
  100% { transform: translateY(0); }
}
#start-button{
  background-color: #ff4500;
  color: thistle;
  text-shadow: #ffefd5 1px 1px 1px;
}
  </style>
</head>
<body>
  <h1 id="title">ðŸŽ‰ Hungama Click Frenzy ðŸŽ‰</h1>
  <div id="game-area"></div>
  <div id="score">Score: 0</div>
  <button onclick="startGame()" id="start-button">Start Hungama</button>
  <script>
    let score = 0;
let gameInterval;

function startGame() {
  score = 0;
  document.getElementById("score").innerText = "Score: 0";
  clearInterval(gameInterval);
  gameInterval = setInterval(spawnEmoji, 500);
  setTimeout(() => {
    clearInterval(gameInterval);
    alert("Hungama Over! Final Score: " + score);
  }, 30000);
}


function spawnEmoji() {
  const emojiList = ["ðŸŽˆ", "ðŸŽ‰", "ðŸ’¥", "ðŸ˜‚", "ðŸ˜œ", "ðŸ”¥"];
  const emoji = document.createElement("div");
  emoji.className = "emoji";
  emoji.innerText = emojiList[Math.floor(Math.random() * emojiList.length)];
  emoji.style.top = Math.random() * 350 + "px";
  emoji.style.left = Math.random() * 90 + "%";

  emoji.onclick = () => {
    score += 10;
    document.getElementById("score").innerText = "Score: " + score;
    emoji.remove();
  };

  document.getElementById("game-area").appendChild(emoji);
  setTimeout(() => emoji.remove(), 3000);
}

  </script>
</body>
</html>

